{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": ["es2017", "dom"],
      "strict": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "outDir": "dist",
      "noImplicitAny": false,
      "sourceMap": true,
      "inlineSources": true,
      "rootDir": "src",
      "declaration": true
    },
    "include": ["**/*.ts"]
  }
  
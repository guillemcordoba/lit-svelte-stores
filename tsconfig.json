{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "declaration": true
  },
  "include": ["**/*.ts"]
}
